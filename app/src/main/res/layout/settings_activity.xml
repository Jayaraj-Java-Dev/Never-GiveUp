<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linear1BG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearBackGround"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageviewBackGround"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/b_hevo_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/image_hevo1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hevo_team_1" />

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Settings"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimageview1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/default_profile"
                app:civ_border_color="#4d4d4d"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="#212121" />

            <LinearLayout
                android:id="@+id/b_hevo_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="NAME"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Phone"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
            <com.facebook.shimmer.ShimmerFrameLayout
                app:shimmer_duration="2000"
                app:shimmer_shape="linear"
                app:shimmer_base_alpha="0.7"
                app:shimmer_repeat_mode="restart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/editprof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image_hevo82"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_7" />

                    <TextView
                        android:id="@+id/text_hevo62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="Edit Profile"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/image_hevo_bt42"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ltheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image_hevo8"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_7" />

                    <TextView
                        android:id="@+id/text_hevo6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="Themes"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/image_hevo_bt4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lhelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image_hevo7"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_5_2" />

                    <TextView
                        android:id="@+id/text_hevo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="About Us &amp; Help"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/image_hevo_bt3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lfriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image_hevo9"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_4" />

                    <TextView
                        android:id="@+id/text_hevo7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="Invite a Friend"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/image_hevo_bt5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/privacypol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/privacypolimg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/privacy_policy_icon" />

                    <TextView
                        android:id="@+id/privacypoltext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="Terms Of Privacy Policy"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/privacypolimg2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image_hevo10"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_3" />

                    <TextView
                        android:id="@+id/text_hevo8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="Logout"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/image_hevo_bt6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hevo_team_2" />
                </LinearLayout>
            </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>